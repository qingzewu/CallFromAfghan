<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageFragment">

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="30dp"
        android:ems="20"
        android:gravity="start|top"
        android:hint="@string/text_somthing"
        android:inputType="date|textUri|textShortMessage|textLongMessage|textAutoCorrect|none|numberSigned|textVisiblePassword|textWebEditText|textMultiLine|textNoSuggestions|textCapSentences|textAutoComplete|textImeMultiLine|numberDecimal"
        android:minHeight="48dp"
        tools:ignore="TextContrastCheck" />

    <Spinner
        android:id="@+id/spinnerMessageTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextMessage"
        android:layout_marginStart="30dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="80dp"
        android:minHeight="48dp"
        android:theme="@style/Platform.MaterialComponents.Light"
        tools:ignore="SpeakableTextPresentCheck"
        />

    <TextView
        android:id="@+id/textViewMessageTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send the message to:"
        android:layout_below="@+id/spinnerMessageTo"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="370dp"
        />

    <Button
        android:id="@+id/messageSendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="500dp"
        android:text="Send" />

</FrameLayout>